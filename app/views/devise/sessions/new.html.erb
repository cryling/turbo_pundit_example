<div class="flex justify-center w-96">
  <div class="relative p-4 w-full max-w-md h-full md:h-auto">
    <div class="relative bg-white rounded-lg shadow">
      <div class="py-6 px-6 lg:px-8">
        <h3 class="mb-4 text-xl font-medium text-gray-900">Sign in to our platform</h3>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |form| %>
          <div>
            <%= form.label :email, class: "block mb-2 text-sm font-medium text-gray-900" %>
            <%= form.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Your Email", class: "placeholder:italic bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
          </div>
          <div>
            <%= form.label :password, class: "block mb-2 text-sm font-medium text-gray-900" %>
            <%= form.password_field :password, autocomplete: "current-password", placeholder: "••••••••", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="flex justify-between">
              <div class="flex items-start">
                <div class="flex items-center h-5">
                  <%= form.check_box :remember_me, class: "w-4 h-4 bg-gray-50 rounded border border-gray-300 focus:ring-3 focus:ring-blue-300 " %>
                </div>
                <%= form.label :remember_me, class: "ml-2 text-sm font-medium text-gray-900" %>
              </div>
            </div>
          <% end %>
          <div class="actions">
            <%= form.submit "Log in", class: "w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
          </div>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm text-blue-700 hover:underline" %>
        <% end %>
        <div class="text-sm font-medium text-gray-500 mt-6">
          Not registered? <%= link_to "Create account", new_registration_path(resource_name), class: "text-blue-700 hover:underline" %>
        </div>
      </div>
    </div>
  </div>
</div>
